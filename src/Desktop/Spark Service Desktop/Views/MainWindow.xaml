<Window x:Class="Spark_Service_Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spark_Service_Desktop"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10">
            <Button Content="Dashboard" Width="100" Height="30" Margin="5" Click="NavigateToDashboard"/>
            <Button Content="Users" Width="100" Height="30" Margin="5" Click="NavigateToUser"/>
            <Button Content="Academy" Width="100" Height="30" Margin="5" Click="NavigateToAcademy"/>
            <Button Content="Exercises" Width="100" Height="30" Margin="5" Click="NavigateToExercises"/>
        </StackPanel>
    </Grid>
</Window>
