<Page x:Class="Spark_Service_Desktop.Views.RegisterUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Spark_Service_Desktop.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterUserPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Registrar Usuário" FontSize="24" FontWeight="Bold" Margin="0, 0, 0, 20"/>
            <TextBox Name="usernameBox" Width="200" Height="30" Margin="0,0,0,10"/>
            <PasswordBox Name="passwordBox" Width="200" Height="30" Margin="0,0,0,10"/>
            <TextBox Name="emailBox" Width="200" Height="30" Margin="0,0,0,10" ToolTip="Email"/>
            <ComboBox Name="roleComboBox" Width="200" Height="30" Margin="0,0,0,10">
                <ComboBoxItem Content="Owner"/>
                <ComboBoxItem Content="Trainer"/>
                <ComboBoxItem Content="User"/>
            </ComboBox>
            <Button Name="regristerButton" Content="Register" Width="100" Height="30" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
